<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expandableListView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <FrameLayout
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>

        <Switch
            android:id="@+id/switch2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:text="Switch"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdgeLength="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton

                android:id="@+id/btn_reload"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:minHeight="50dp"
                android:tint="#000000"
                app:srcCompat="@drawable/ic_menu_refresh" />

            <ImageButton
                android:id="@+id/btn_editscript"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:minHeight="50dp"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/btn_debug"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:minHeight="50dp"
                android:tint="#000000"
                app:srcCompat="@drawable/ic_lock_bugreport" />

            <ImageButton
                android:id="@+id/btn_log"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:minHeight="50dp"
                android:tint="#000000"
                app:srcCompat="@drawable/ic_doc_document" />

            <ImageButton
                android:id="@+id/btn_manage"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:minHeight="50dp"
                android:tint="#000000"
                app:srcCompat="@drawable/ic_menu_manage" />

            <ImageButton
                android:id="@+id/btn_scriptActivity"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:minHeight="50dp"
                app:srcCompat="@drawable/ic_menu_slideshow" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>